#: kivy 2.0.0

<Home>:
    tm1: tm1
    tm2: tm2
    canvas.before:
        Color:
            rgb: 1,1,1
        Rectangle:
            size: self.size
    size: root.size
    BoxLayout:
        orientation: 'vertical'
        padding: 10, 10
        spacing: 10
        Label:
            canvas.before:
                Color:
                    rgb: 189/255, 228/255, 244/255
                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint_y: 0.1
            font_name: 'font.ttf'
            color: 0,0,0
            text: 'Rally Clock - Crew'
            font_size:  (self.height * 0.6)
        Label:
            id: tm1
            size_hint_y:0.35
            color: 0,0,0
            font_size: self.height * 0.5
            bold: True
            text: "11:23"
        Label:
            id: tm2
            font_size: self.height * 0.5
            size_hint_y: 0.4
            color: 0,0,0
            bold: True
            text: "56"
        BoxLayout:
            size_hint_y:0.15
            background_color: 0,0,0,1
            orientation:'horizontal'
            RoundedButton
                size_hint_x: 0.25
                color: 0,0,0
                text: 'More\nOptions'
                bold: True
                font_size:  (self.height ** 1.2 + self.width ** 1.2) ** 0.5
                text_size: self.size
                valign: 'middle'
                halign: 'center'
                on_release: root.manager.current = "Settings"
            BoxLayout:
                orientation: 'vertical'
                size_hint_x:0.35
                color: 0,0,0
                Label:
                    size_hint_y:0.5
                    markup: True
                    text_size:self.size
                    halign: 'left'
                    valign: 'bottom'
                    text: f'[size=14sp]Flight:[/size] [size=16sp][b]{root.fl}[/b][/size]'
                    color:0,0,0
                Label:
                    size_hint_y:0.5
                    markup: True
                    text_size:self.size
                    halign: 'left'
                    valign: 'bottom'
                    text: f'[size=14sp]Synced:[/size] [size=16sp][b]{root.sync_done}[/b][/size]'
                    color:0,0,0
            Image:
                size_hint_x: 0.4
                source: 'sign.png'
                size: self.texture_size
