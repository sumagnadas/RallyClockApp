#: kivy 2.0.0

<Home>:
    loc_but:loc_but
    tm1: tm1
    tm2: tm2
    canvas.before:
        Color:
            rgb: 1,1,1
        Rectangle:
            size: self.size
    size: root.size
    BoxLayout:
        orientation: 'vertical'
        #size: self.parent.size
        padding: 10, 10
        spacing: 10
        Label:
            size_hint_y: 0.05
            color: 0,0,0
            text: 'Home'
        RoundedButton:
            color: 0,0,0
            size_hint_y: 0.15
            text: "Clock Capture"
            on_press: root.on_b3(self)
            on_release: app.on_release(self, 2)
        BoxLayout:
            size_hint_y: 0.15
            spacing: 10
            RoundedButton:
                color: 0,0,0
                text: 'Log'
                on_press: root.on_b4(self)
                on_release: app.on_release(self, 3)
            RoundedButton:
                id: loc_but
                color: 0,0,0
                text: 'Location\nD1-TC-01'
                on_press: root.on_b5(self)
                on_release: app.on_release(self, 4)
            RoundedButton:
                color: 0,0,0
                text: 'Upload'
                on_press: root.on_b6(self)
                on_release: app.on_release(self, 5)
        Label:
            id: tm1
            size_hint_y:0.2
            color: 0,0,0
            font_size: self.height * 0.9
            bold: True
            text: "11:23"
        Label:
            id: tm2
            font_size: self.height * 0.9
            size_hint_y: 0.3
            color: 0,0,0
            bold: True
            text: "56"
        BoxLayout:
            size_hint_y:0.15
            background_color: 0,0,0,1
            orientation:'horizontal'
            RoundedButton
                size_hint_x: 0.25
                color: 0,0,0
                text: 'settings'
                on_press: root.on_set(self)
                on_release: app.on_release(self, 6)
            Widget:
                size_hint_x:0.35
                color: 0,0,0
            Label:
                id: bat
                size_hint_x: 0.4
                color: 0,0,0
                text: "Battery"
